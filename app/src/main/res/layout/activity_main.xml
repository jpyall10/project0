<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ada"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/MyApps"
        android:text="My Nanodegree Apps"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="34dp"
        />

    <Button
        android:id="@+id/spotify"
        android:text="Spotify Streamer"
        android:textColor="#afa"
        android:textStyle="bold"
        android:layout_below="@id/MyApps"
        android:layout_margin="10dp"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        />
    <Button
        android:id="@+id/scores"
        android:layout_below="@id/spotify"
        android:text="Scores App"
        android:textColor="#afa"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-light"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/library"
        android:layout_below="@id/scores"
        android:text="Library App"
        android:textColor="#afa"
        android:textStyle="bold"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/build_it_bigger"
        android:layout_below="@id/library"
        android:text="Build It Bigger"
        android:textColor="#afa"
        android:textStyle="bold"
        android:textSize="28sp"

        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/xyz_reader"
        android:layout_below="@id/build_it_bigger"
        android:text="XYZ Reader"
        android:textColor="#afa"
        android:textStyle="bold"
        android:textSize="28sp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/capstone"
        android:layout_below="@id/xyz_reader"
        android:text="Capstone: My App"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"

        android:textSize="30sp"
        android:layout_margin="10dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>


</RelativeLayout>
